<% translations.each do |translation| %>
    <div class="translation_item" data-translation='<%= translation.to_json %>'
         data-locale='<%= translation[:locale] %>'
         data-key='<%= translation[:key] %>'
         data-filename='<%= translation[:filename] %>'>
      <div class="row">
        <div class="col-md-1">
          <%= translation[:locale] %>
        </div>
        <div class="col-md-5">
          <%= translation[:key] %>
        </div>
        <div class="col-md-6 ">
          <div class="translation_filename">
            <%= translation[:filename].reverse %>
          </div>
        </div>
      </div>
    </div>
<% end %>








